{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"]
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts"],
  "filesGlob": ["./src/**/*.ts"],
  "include": ["src/**/*.ts", "../../typings/**/*.ts"],
  "references": [
    {
      "path": "../ast"
    },
    {
      "path": "../environment"
    },
    {
      "path": "../compiler"
    },
    {
      "path": "../parser"
    },
    {
      "path": "../runtime"
    },
    {
      "path": "../utils"
    },
  ]
}
