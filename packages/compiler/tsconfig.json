{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"]
  },
  "exclude": ["./dist/**", "node_modules", "**/*.spec.ts"],
  "filesGlob": ["./src/**/*.ts"],
  "include": ["src/**/*.ts", "typings/**/*.ts"],
  "references": [
    {
      "path": "../environment"
    },
    {
      "path": "../runtime"
    },
    {
      "path": "../ast"
    }
  ]
}
